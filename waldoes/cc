PREFLAGS=""
PREFLAGS="$PREFLAGS -g"
PREFLAGS="$PREFLAGS -Os"
POSTFLAGS="$POSTFLAGS -lpthread"
POSTFLAGS="$POSTFLAGS -lm"
POSTFLAGS="$POSTFLAGS -lSDL2"
POSTFLAGS="$POSTFLAGS -lSDL2_image"
POSTFLAGS="$POSTFLAGS -lSDL2_mixer"
POSTFLAGS="$POSTFLAGS -lSDL2_ttf"
POSTFLAGS="$POSTFLAGS -lSDL2_net"
POSTFLAGS="$POSTFLAGS -lSDL2_gfx"
gcc $PREFLAGS $@ $POSTFLAGS

